<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>

        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>

        <OutputType>Library</OutputType>

        <IsPackable>true</IsPackable>
    </PropertyGroup>

    <!-- NuGet Package Metadata -->
    <PropertyGroup>
        <PackageId>Pico.DI</PackageId>
        <Version>$(PicoDIVersion)</Version>
        <Description>A lightweight, zero-reflection, AOT-compatible dependency injection container for .NET with compile-time source generation</Description>
        <PackageTags>DI;IoC;AOT;Dependency Injection;Container;Source Generator</PackageTags>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\README.md" Pack="true" PackagePath="" Visible="false" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Pico.DI.Abs\Pico.DI.Abs.csproj" />
        <!-- 
          For local development: use ProjectReference for the source generator.
          For NuGet consumers: the generator is included via package dependencies.
          Using ProjectReference avoids duplicate analyzer loading issues during rebuild.
        -->
        <ProjectReference Include="..\Pico.DI.Gen\Pico.DI.Gen.csproj" 
                          OutputItemType="Analyzer" 
                          ReferenceOutputAssembly="false"
                          SetTargetFramework="TargetFramework=netstandard2.0" />
    </ItemGroup>

    <!-- Embed Gen analyzer into NuGet package -->
    <ItemGroup>
        <None Include="..\Pico.DI.Gen\bin\$(Configuration)\netstandard2.0\Pico.DI.Gen.dll"
              Pack="true"
              PackagePath="analyzers/dotnet/cs"
              Visible="false" />
    </ItemGroup>

</Project>

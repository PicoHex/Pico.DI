<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>

        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>

        <OutputType>Library</OutputType>

        <IsTrimmable>true</IsTrimmable>
        <IsAotCompatible>true</IsAotCompatible>

        <IsPackable>true</IsPackable>
    </PropertyGroup>

    <!-- NuGet Package Metadata -->
    <PropertyGroup>
        <PackageId>Pico.DI</PackageId>
        <Version>$(PicoDIVersion)</Version>
        <Description>A lightweight, zero-reflection, AOT-compatible dependency injection container for .NET with compile-time source generation</Description>
        <PackageTags>DI;IoC;AOT;Dependency Injection;Container;Source Generator</PackageTags>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\README.md" Pack="true" PackagePath="" Visible="false" />
    </ItemGroup>

    <!-- Reference to Source Generator (compile-time only, not a runtime dependency) -->
    <ItemGroup>
        <ProjectReference Include="..\Pico.DI.Gen\Pico.DI.Gen.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
    </ItemGroup>

    <!-- 
        Pack the Source Generator DLL into analyzers folder.
        NuGet automatically loads DLLs from analyzers/dotnet/cs as Roslyn analyzers.
        No .props or .targets files needed for this to work.
    -->
    <ItemGroup>
        <None Include="..\Pico.DI.Gen\bin\$(Configuration)\netstandard2.0\Pico.DI.Gen.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
    </ItemGroup>
    <ItemGroup>
      <PackageReference Include="Pico.DI.Abs" Version="0.0.16" />
    </ItemGroup>

</Project>

<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>

        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>

        <OutputType>Library</OutputType>

        <IsTrimmable>true</IsTrimmable>
        <IsAotCompatible>true</IsAotCompatible>
    </PropertyGroup>

    <!-- NuGet Package Metadata -->
    <PropertyGroup>
        <PackageId>Pico.DI</PackageId>
        <Version>1.0.0</Version>
        <Authors>Pico.DI Contributors</Authors>
        <Description>A lightweight, zero-reflection, AOT-compatible dependency injection container for .NET</Description>
        <PackageTags>DI;IoC;AOT;Dependency Injection;Container</PackageTags>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/pico-di/Pico.DI</PackageProjectUrl>
        <RepositoryUrl>https://github.com/pico-di/Pico.DI</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="../../README.md" Pack="true" PackagePath="/" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Pico.DI.Abs\Pico.DI.Abs.csproj" />
    </ItemGroup>

</Project>

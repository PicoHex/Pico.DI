<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>

        <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
        <IsRoslynComponent>true</IsRoslynComponent>

        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>

        <!-- Suppress release tracking warning (internal source generator, not public package) -->
        <NoWarn>$(NoWarn);RS2008</NoWarn>

        <OutputType>Library</OutputType>

        <ImplicitUsings>enable</ImplicitUsings>

        <!-- Disable trimming for source generator -->
        <PublishTrimmed>false</PublishTrimmed>
        <IsTrimmable>false</IsTrimmable>
    </PropertyGroup>

    <!-- NuGet Package Metadata -->
    <PropertyGroup>
        <PackageId>Pico.DI.Gen</PackageId>
        <Version>1.0.0</Version>
        <Authors>Pico.DI Contributors</Authors>
        <Description>Source generator for Pico.DI - generates AOT-compatible factory code at compile time</Description>
        <PackageTags>DI;IoC;AOT;Source Generator;Roslyn</PackageTags>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/pico-di/Pico.DI</PackageProjectUrl>
        <RepositoryUrl>https://github.com/pico-di/Pico.DI</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageReadmeFile>README.md</PackageReadmeFile>

        <!-- Source Generator specific settings -->
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <DevelopmentDependency>true</DevelopmentDependency>
        <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="5.0.0" PrivateAssets="all" />
    </ItemGroup>

    <!-- Pack the generator DLL into analyzers folder -->
    <ItemGroup>
        <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
        <None Include="../../README.md" Pack="true" PackagePath="/" />
    </ItemGroup>

</Project>
